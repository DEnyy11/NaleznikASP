@using NálezníkASP.DTO
@model IEnumerable<FindingDto>

<h1>List of all findings</h1>

@foreach (var item in Model) {
	<div class="border border-1 border-dark p-2">
		<h5>@item.Name</h5>
		Id: @item.Id
		<div class="d-flex gap-2">
			<a class="btn btn-warning" asp-action="Edit" asp-route-id=@item.Id>Edit</a>
			<form method="post">
				<input class="btn btn-danger" asp-action="Delete" asp-route-id=@item.Id type="submit" value="Delete" />
			</form>
		</div>
	</div>
}
<hr />
<div>
	<a class="btn btn-success" asp-action="Index">Insert new</a>
</div>