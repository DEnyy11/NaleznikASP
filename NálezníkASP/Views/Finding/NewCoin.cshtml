@using NálezníkASP.DTO
@model FindingDto

<h1 class="text-center mb-4">New Coin</h1>

<div class="card shadow-lg">
    <div class="card-body">
        <form asp-action="Save">
            <input type="hidden" name="sourceView" value="Coin" />
        
            <!-- Name and Description -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-bold">Name</label>
                    <input asp-for="Name" class="form-control rounded-pill" placeholder="Enter coin name" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
                </div>
            </div>

            <!-- Finding Date and Depth -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="FindingDate" class="form-label fw-bold">Finding Date</label>
                    <input asp-for="FindingDate" type="date" class="form-control rounded-pill" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Depth" class="form-label fw-bold">Depth (cm)</label>
                    <input asp-for="Depth" type="number" step="0.01" class="form-control rounded-pill" />
                </div>
            </div>

            <!-- Location Coordinates -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="LocationLatitude" class="form-label fw-bold">Latitude</label>
                    <input asp-for="LocationLatitude" type="number" class="form-control rounded-pill" placeholder="Enter latitude" />
                </div>
                <div class="col-md-6">
                    <label asp-for="LocationLangtitude" class="form-label fw-bold">Longitude</label>
                    <input asp-for="LocationLangtitude" type="number" class="form-control rounded-pill" placeholder="Enter longitude" />
                </div>
            </div>

            <!-- Coin Details -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="MintingYear" class="form-label fw-bold">Minting Year</label>
                    <input asp-for="MintingYear" type="number" class="form-control rounded-pill" placeholder="Year of minting" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Nominal" class="form-label fw-bold">Nominal Value</label>
                    <input asp-for="Nominal" type="number" class="form-control rounded-pill" placeholder="Nominal value" />
                </div>
            </div>

            <!-- Photo Uploads -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="FindingPhoto" class="form-label fw-bold">Finding Photo</label>
                    <input asp-for="FindingPhoto" type="file" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="AfterCleanPhoto" class="form-label fw-bold">After Clean Photo</label>
                    <input asp-for="AfterCleanPhoto" type="file" class="form-control" />
                </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary rounded-pill px-4">Save</button>
            </div>
        </form>
    </div>
</div>
