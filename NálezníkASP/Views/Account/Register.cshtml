@using NálezníkASP.DTO
@model RegisterDto
@{
    ViewData["Title"] = "Register";
}
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="width: 400px;">
        <h1 class="text-center mb-4">Register</h1>
        <div class="text-danger text-center mb-3" asp-validation-summary="All"></div>
        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label fw-bold">Username</label>
                <input asp-for="UserName" class="form-control rounded-pill" placeholder="Choose a username" />
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" type="email" class="form-control rounded-pill" placeholder="Enter your email" />
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold">Password</label>
                <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter a password" />
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Confirm your password" />
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-primary rounded-pill" type="submit">Register</button>
            </div>
        </form>
      
    </div>
</div>
