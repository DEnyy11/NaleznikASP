

@{
    ViewData["Title"] = "Password Reset Success";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Password Reset Success</h1>

    <div class="card shadow-sm">
        <div class="card-header">
            <h3>Your password has been reset successfully.</h3>
        </div>
        <div class="card-body">
            <p>You can now <a href="@Url.Action("Login", "Account")">log in</a> with your new password.</p>
        </div>
    </div>
</div>
