@using NálezníkASP.DTO
@model ProfileDto

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header text-center">
            <h3>@Model.UserName's Profile</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    @if (Model.ProfilePictureReview != null) {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfilePictureReview)" class="img-fluid rounded-circle mb-3" alt="Profile Picture" />
                    }
                    else {
                        <img src="https://via.placeholder.com/150" class="img-fluid rounded-circle mb-3" alt="Profile Picture" />
                    }
                </div>
                <div class="col-md-8">
                    <div class="mb-3">
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Bio:</strong> @Model.Bio</p>
                        <p><strong>Detector:</strong> @Model.Detector</p>
                        <p><strong>Member since:</strong> @Model.RegistrationDate.ToString("dd.MM.yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
