@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}

<h1 class="bg-info text-white text-center p-3">All Roles</h1>

<div class="container mt-4">
    <a asp-action="Create" class="btn btn-primary rounded-pill mb-3">Create a Role</a>

    <table class="table table-striped table-sm table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Update</th>
                <th>Delete</th>
                <th>ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model) {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-warning btn-sm rounded-pill" asp-action="Edit" asp-route-id="@role.Id">Update</a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm rounded-pill">
                                Delete
                            </button>
                        </form>
                    </td>
                    <td>@role.Id</td>
                </tr>
            }
        </tbody>
    </table>
</div>
